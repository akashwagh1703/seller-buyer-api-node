<IfModule mod_headers.c>
    SetEnvIf Origin "https://seller.nerace.in/" CORS_ALLOWED_ORIGIN
    SetEnvIf Origin "https://buyer.nerace.in/" CORS_ALLOWED_ORIGIN
    SetEnvIf User-Agent "Postman" CORS_ALLOWED_ORIGIN

    Header set Access-Control-Allow-Origin %{CORS_ALLOWED_ORIGIN}e env=CORS_ALLOWED_ORIGIN
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
    Header set Access-Control-Allow-Credentials "true"
    Header set Access-Control-Max-Age "86400"
</IfModule>
